<h1>Insurers</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @insurers.each do |insurer| %>
      <tr>
        <td class="first"><%= link_to insurer.name, insurer %></td>
        <td>Total clients: <%= insurer.users.length %></td>
        <td>Â£<%= "%.2f" % insurer.total %>
        <td><%= link_to 'Edit', edit_insurer_path(insurer) %></td>
        <% if insurer.users.length == 0 %>
          <td><%= link_to 'Destroy', insurer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

